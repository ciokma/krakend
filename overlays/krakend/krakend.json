{
  "$schema": "https://www.krakend.io/schema/v2.9/krakend.json",
  "version": 3,
  "name": "My KrakenD API",
  "port": 8080,
  "endpoints": [
    {
      "endpoint": "/limited-to-5000-per-second",
      "extra_config": {
        "qos/ratelimit/router": {
          "max_rate": 5000
        }
      },
      "backend": [
        {
          "host": [
            "https://jsonplaceholder.typicode.com/"
          ],
          "url_pattern": "/todos/1",
          "extra_config": {
            "qos/ratelimit/proxy": {
              "max_rate": 100,
              "capacity": 1
            }
          }
        }
      ]
    },
    {
      "endpoint": "/todos",
      "method": "GET",
      "backend": [
        {
          "host": [
            "https://jsonplaceholder.typicode.com"
          ],
          "url_pattern": "/todos/1",
          "method": "GET"
        }
      ]
    },
    {
      "endpoint": "/weather",
      "method": "GET",
      "backend": [
        {
          "host": [
            "https://api.openweathermap.org"
          ],
          "url_pattern": "/data/2.5/weather?q=London&appid=457fc8ee279c9c03906622cae3fd9e22",
          "method": "GET"
        }
      ]
    },
    {
      "endpoint": "/combined",
      "method": "GET",
      "backend": [
        {
          "host": [
            "https://jsonplaceholder.typicode.com"
          ],
          "url_pattern": "/todos/1",
          "method": "GET"
        },
        {
          "host": [
            "https://api.openweathermap.org"
          ],
          "url_pattern": "/data/2.5/weather?q=London&appid=YOUR_API_KEY",
          "method": "GET"
        }
      ]
    }
    
  ],
  "extra_config": {
      "telemetry/logging": {
        "level": "WARNING",
        "prefix": "[KRAKEND]",
        "stdout": true
      }
   }
}
